html
    head 
        meta(charset='utf-8')
        title='Productos'
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css")
    body
        .container.mt-3
            .jumbotron
                h1(style="color:blue;")="Ingrese Producto"
                br
                block formulario
                    form(action="productos" method="post")
                        div(class="form-group")
                            label(for="title")
                            b="Nombre"
                            input(class="form-control" type="text" name="title")
                            label(for="price")
                            b="Precio"
                            input(class="form-control" type="text" name="price")
                            label(for="thumbnail")
                            b="Foto URL"
                            input(class="form-control" type="text" name="thumbnail")                      
                            button(class="btn btn-success mt-3 mb-5")="Enviar"

                    a(class="btn btn-primary mt-3 mb-5 center"  href="/productos/listado")="Ver productos"