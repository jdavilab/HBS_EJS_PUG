  <h2 style="color:crimson;">Vista de Productos</h2>
            {{#if productos.length }}
                <div class="table-responsive">
                    <table class="table table-dark">
                        <tr style="color: yellow;">
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                        </tr>

                        {{#each productos}}
                        <tr>
                            <td>
                                {{this.title}}
                            </td>
                            <td>
                                {{this.price}}
                            </td>
                            <td>
                                <img src="{{this.thumbnail}}" width="50" height="50">
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            {{else}}
                <h3 class="alert alert-danger">No se encontraron productos</h1>
            {{/if}}
            <form>
                {{!-- <% vistaCarga=!vistaCarga%> --}}
                <a class="btn btn-primary mt-3 mb-5" href="/productos">Cargar productos</a>
            </form>